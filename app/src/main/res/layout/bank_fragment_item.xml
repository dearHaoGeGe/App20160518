<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/biankuang"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="姓名：张某某"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_Bank_Account_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="开户银行：中国工商银行"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_Account_Opening_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="开户账号：343405845"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_Opening_Time_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="开户时间：2016-5-20"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_Account_Balance_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:text="账户余额:30万"
             />

        <TextView
            android:id="@+id/tv_Account_Status_BankFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:text="开户状态：冻结"
             />

    </LinearLayout>
</LinearLayout>