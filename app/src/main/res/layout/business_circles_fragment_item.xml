<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/biankuang"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_CompanyName_BusinessCirclesFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="公司名称：杭州云书网络科技有限公司" />

        <TextView
            android:id="@+id/tv_CompanyType_BusinessCirclesFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="公司类型：上市公司" />

        <TextView
            android:id="@+id/tv_Job_BusinessCirclesFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查对象担任职务：公司董事主席" />


        <TextView
            android:id="@+id/tv_BusinessScope_BusinessCirclesFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="经营范围：软件" />

    </LinearLayout>
</LinearLayout>