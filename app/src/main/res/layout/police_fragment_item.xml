<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/biankuang"
        android:orientation="vertical">

        <TextView
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name_PoliceFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="姓名：王二虎"
            android:textSize="15sp" />

        <TextView
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_Place_Birth_PoliceFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="出生地：大连瓦房店"
            android:textSize="15sp" />

        <TextView
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_work_PoliceFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="职业：工人"
            android:textSize="15sp" />

        <TextView
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_Date_Birth_PoliceFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="出生日期：1955-03-12"
            android:textSize="15sp" />

        <TextView
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_IDNumber_PoliceFragment_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="证件号码:130401199605015512"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>